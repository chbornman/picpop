# PicPop Server Configuration

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Public URL (for QR codes and links)
# Use the hotspot IP for offline mode
PUBLIC_URL=http://192.168.4.1:8000

# WiFi Hotspot (for QR code)
WIFI_SSID=PicPop
WIFI_PASSWORD=photobooth

# Database
DATABASE_URL=sqlite+aiosqlite:///./picpop.db

# Storage
PHOTOS_DIR=./photos

# Session
SESSION_EXPIRY_MINUTES=60

# Photos
MAX_PHOTOS_PER_SESSION=20
SAVE_RAW_IMAGES=false
THUMBNAIL_MAX_WIDTH=400

# Camera
# Options: gphoto2, mock
CAMERA_BACKEND=gphoto2
PHOTOS_PER_CAPTURE=3
CAPTURE_DELAY_SECONDS=1.5
COUNTDOWN_SECONDS=3
